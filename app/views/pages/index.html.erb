
<div class="container-fluid">
  <div class="row d-flex justify-content-center">
    <div class="col-md-2 box">
      <div class="contain">
        <div class="card">
         <%= link_to(image_tag(@user.avatar.thumb.url, alt: 'image', class: 'img'), @user.avatar.url, target: '_blank') if @user.avatar? %>
          <div class="card-block">
            <h5 class="card-title"><%= @user.fullname %></h5>
            <p class="card-text">@<%= @user.username %></p>
            <p><%= link_to 'Edit Profile', edit_user_registration_path(@user), method: :get, class: 'btn btn-info btn-sm' %></p>
          </div>

          <div class="card-block">
            <ul class= "d-flex w-100 justify-content-between align-list">
              <li class="list-group-item list-item">
                <%= link_to 'Tweets', tweets_path, method: :get %>
                <%= current_user.tweets.count %></li>
              <li class="list-group-item list-item"><%= link_to 'Following', leaders_user_path(@user), method: :get %>
               <%=current_user.leaders.count %></li>
              <li class="list-group-item list-item">
                <%= link_to 'Followers', followers_user_path(@user), method: :get %>
               <%=current_user.followers.count %></li>
            </ul>
          </div>
        </div>

        <div class="card hash-tags">
          <div class="card-block">
            <h5>Hash Tags</h5>
            <hr>
              <%= link_to 'Live tweet feed!', users_path, method: :get %>
            <h6>
              <br>
              <% Tag.all.each do |tag| %>
                <p>#<%= tag.name %></p>
              <% end %>
            </h6>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-5 box">
      <div class="panel panel-default tweets">

        <%= render 'tweets/tweetform' %>

        <!-- List group -->
        <ul class="list-group">
          <li class="list-group-item">
            <% @feed.each do |tweet| %>
              <h6>
                <%= link_to(image_tag(tweet.user.avatar.thumb.url, alt: 'image', class: 'img'), tweet.user.avatar.url, target: '_blank') if tweet.user.avatar? %>
                <%= tweet.user.fullname %> @<%= link_to tweet.user.username, tweet_path(tweet), method: :get %>.<%=tweet.created_at.strftime(" %d %B %Y") %>
                <strong> tweeted:</strong>
              </h6>
              <br>
              <h5> <%= tweet.body %></h5>
              <% tweet.tags.each do |tag| %>
                <br>
                #<%= tag.name %>
              <% end %>
              <br>
              <hr>
            <% end %>
          </li>
        </ul>
      </div>
    </div>

    <div class="col-md-2 box text-center">
      <div class="buttons">
        <%= link_to 'New Tweet', new_tweet_path, method: :get, class: "btn btn-info" %>
      </div>
      <div class="buttons">
        <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "btn btn-info" %>
      </div>
    </div>
  </div>
</div>
