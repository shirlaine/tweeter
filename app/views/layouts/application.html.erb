<!DOCTYPE html>
<html>
  <head>
    <title>Tweeter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if user_signed_in? %>
      <%= render 'layouts/signed_in_nav' %>
    <% else %>
      <%= render 'layouts/signed_out_nav' %>
    <% end %>

    <% if notice.present? %>
      <p class="notice alert-success white"><%= notice %></p>
    <% elsif alert.present? %>
      <p class="alert alert-error white"><%= alert %></p>
    <% end %>

    <%= yield %>

  </body>
</html>
