<div class="container-fluid margin-50">
  <div class="row d-flex justify-content-center">

    <div class="col-md-3 box">
      <div class="contain">

         <%= render partial: 'pages/profile' %>

        <div class="card hash-tags">
          <div class="card-block">
            <div class="lower-block">
              <% if @tweet.user.id == current_user.id %>
                <p>
                  <%= link_to 'Add tag', new_tweet_tag_path(@tweet), method: :get %>
                </p>
                <p>
                  <%= link_to 'Edit Tweet', edit_tweet_path(@tweet, @tag), method: :get %>
                </p>
                <p>
                  <%= link_to 'Delete Tweet', tweet_path(@tweet), method: :delete, data: { confirm: 'Are you sure you want to delete this tweet?'} %>
                </p>
                <p>
                  <%= link_to 'Back to my Tweet Feed', tweets_path, method: :get %>
                </p>
                <p>
                  <%= link_to 'Back to Home', index_path, method: :get %>
                </p>
                <p>
                  <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "btn btn-info" %>
                </p>
              <% else %>
                <h4>Hash Tags</h4>
                <hr>
                 <% @tweet.tags.each do |tag| %>
                  <p>#<%= tag.name %></p>
              <% end %>
              <p><%= link_to 'Back to Home', index_path, method: :get %></p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-7 box">
      <div class="panel panel-default tweets ">
        <div class="panel-body show-tweet">
          <strong><p>@<%= @tweet.user.username %> tweeted:</p></strong>
          </div>
        </div>

        <div class="well well-md new-tweet text-center box-show-2">
          <h4>" <%= @tweet.body %> "</h4>
          Tags: <% @tweet.tags.each do |tag| %>
          <span>
            #<%= link_to tag.name, edit_tweet_tag_path(@tweet,tag), method: :get %>
          </span>
          <% end %>
         </div>
      </div>
    </div>

  </div>
</div>

