
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 all-tweets center">

      <div class="white-box">
        <h1>Live tweets from all users</h1>
        <% @tweets.each do |tweet| %>
        <div class="tweet-cont">

          <p><%= tweet.user.fullname %> @<%= link_to tweet.user.username, user_path(tweet.user), method: :get %>.<%=tweet.created_at.strftime(" %d %B %Y") %></p>
          <h5 class="text-center strong"><%= tweet.body %></h5>
        </div>
        <% end %>
      </div>

    </div>
  </div>
</div>


